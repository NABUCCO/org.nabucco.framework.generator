<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
	version="1.0">

	<mapped-superclass class="org.nabucco.framework.base.facade.datatype.NString">
		<attributes>
			<basic name="value" />
		</attributes>
	</mapped-superclass>

	<mapped-superclass
		class="org.nabucco.framework.base.facade.datatype.NInteger">
		<attributes>
			<basic name="value" />
		</attributes>
	</mapped-superclass>

	<mapped-superclass class="org.nabucco.framework.base.facade.datatype.NLong">
		<attributes>
			<basic name="value" />
		</attributes>
	</mapped-superclass>

	<mapped-superclass class="org.nabucco.framework.base.facade.datatype.NDouble">
		<attributes>
			<basic name="value" />
		</attributes>
	</mapped-superclass>

	<mapped-superclass
		class="org.nabucco.framework.base.facade.datatype.NBoolean">
		<attributes>
			<basic name="value" />
		</attributes>
	</mapped-superclass>

	<mapped-superclass class="org.nabucco.framework.base.facade.datatype.NText">
		<attributes>
			<basic name="value">
				<lob />
			</basic>
		</attributes>
	</mapped-superclass>

	<mapped-superclass
		class="org.nabucco.framework.base.facade.datatype.NByteArray">
		<attributes>
			<basic name="value">
				<lob />
			</basic>
		</attributes>
	</mapped-superclass>

	<mapped-superclass class="org.nabucco.framework.base.facade.datatype.NDate">
		<attributes>
			<basic name="value" />
		</attributes>
	</mapped-superclass>

	<mapped-superclass
		class="org.nabucco.framework.base.facade.datatype.DatatypeSupport">
		<attributes>
			<transient name="datatypeState" />
			<transient name="properties" />
			<transient name="componentRelationContainer" />
		</attributes>
	</mapped-superclass>

	<mapped-superclass
		class="org.nabucco.framework.base.facade.datatype.componentrelation.ComponentRelation">
		<attributes>
			<id name="id">
				<column length="30" name="id" nullable="false" />
				<generated-value />
			</id>
			<basic name="type">
				<column nullable="false" name="relationType" />
			</basic>
			<version name="version" />
			<embedded name="sourceId">
				<attribute-override name="value">
					<column length="255" name="sourceId" nullable="false" />
				</attribute-override>
			</embedded>
			<transient name="relationType" />
			<transient name="relationState" />
			<transient name="target" />
		</attributes>
	</mapped-superclass>

</entity-mappings>
